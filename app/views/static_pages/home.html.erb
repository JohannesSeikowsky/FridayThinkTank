<% provide(:title, "Thought of the week - Homepage") %> 

<div class="col-xs-10">
  <h1 id="title_question">What was your most interesting thought this week?</h1>

  <div id="container">
    <% @all_posts.each do |post| %>
     <a href="<%= post_path(post) %>"> 
        <div class="item">  
          <h4> <%= post.title %> </h4> 
          <%= truncate(post.content, length: rand(70..105)) %> 
          <p style="color: #9D9D9D;"> by <%= post.user.name %> </p> 
        </div> 
     </a>
    <% end %> 
  </div> 
</div>

<div class="col-xs-2">
  <h2 id="twitter_blue"> Newest: </h2>
  <h2 id="twitter_blue"> Contributors: </h2>
  <% @users.each do |user| %>
    <p> <%= user.name %> </p> 
  <% end %>
  <h2 id="twitter_blue"> No. of thoughts: </h2>
    <h1 style="text-align: center; font-size: 92px; color: yellow;"> <%= @total_number_of_posts %> </h1> 
</div> 

<!-- Initializing JQeury Masonry -->
<script>
  var container = document.querySelector('#container');
  var msnry = new Masonry( container, {
    // options
    itemSelector: '.item'
  });
</script> 
