<% provide(:title, "Thought of the week - Homepage") %> 

<div class="col-sm-12 col-md-10">
  <h1 id="title_question">What was your most interesting thought this week? </h1>

  <div id="container">
    <% @all_posts.each do |post| %>
     <a href="<%= post_path(post) %>"> 
        <div class="item">  
          <h4> <%= post.title %> </h4> 
          <%= truncate(post.content, length: rand(70..105)) %> 
          <p style="color: #9D9D9D;"> by <%= post.user.name %> </p> 
        </div> 
     </a>
    <% end %> 
  </div> 
</div>

<div class="col-md-2">
  <h2 id="twitter_blue"> Newest: </h2>
  <% @newest_posts.each do |post| %> 
    <p> <%= link_to post.title, post_path(post) %> </p> 
  <% end %>
  <h2 id="twitter_blue"> People: </h2>
  <% @users.each do |user| %>
    <p> <%= user.name %> </p> 
  <% end %>
  <h2 id="twitter_blue"> Thoughts: </h2>
  <h2 id="" style="font-size: 66px;"> <%= @total_number_of_posts %> </h2>
</div> 

<!-- Initializing JQeury Masonry -->
<script>
  var container = document.querySelector('#container');
  var msnry = new Masonry( container, {
    // options
    itemSelector: '.item'
  });
</script> 
