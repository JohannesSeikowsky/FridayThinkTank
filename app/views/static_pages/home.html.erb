<% provide(:title, "Thought of the week - Homepage") %> 

<div class="col-xs-7 col-sm-10">
  <h1 id="main_header"> <%= @total_number_of_posts %> THOUGHTS </h1>

  <div id="container">
    <% @all_posts.each do |post| %>
     <a href="<%= post_path(post) %>"> 
        <div class="item">  
          <h4> <%= post.title %> </h4> 
          <p style="color: #9D9D9D;"> by <%= post.user.name %> </p> 
        </div> 
     </a>
    <% end %> 
  </div> 
</div>

<div class="col-xs-5 col-sm-2 homepage_right_sidebar">
  <h2 id="twitter_blue"> Newest: </h2>
  <% @newest_posts.each do |post| %> 
    <p> <%= link_to post.title, post_path(post) %> </p> 
  <% end %>
  <h2 id="twitter_blue"> People: </h2>
  <% @users.each do |user| %>
    <p> <%= link_to user.name, user_profile_path(user) %> </p> 
  <% end %>
  <h2 id="twitter_blue"> Thoughts: </h2>
  <h3 id="" style="font-size: 66px; color: yellow;">  </h3>
</div> 

<!-- Initializing JQeury Masonry -->
<script>
  var container = document.querySelector('#container');
  var msnry = new Masonry( container, {
    // options
    itemSelector: '.item'
  });
</script> 
