<% provide(:title, "Thought of the week - Post") %> 

<div class="col-sm-3 col-md-3">
  <% unless @user.profile.nil? %> 
    <div class="profile_on_post">
      <a href="<%= user_profile_path(@user) %>"> 
        <%= image_tag(@profile.image) %>
        <h3 id="twitter_blue"> <%= @user.name %> </h3> 
      </a>
    </div>
  <% else %>
  <% end %>
</div> 

<div class="col-sm-9 col-md-6 post_show">
  <h3> <%= @post.title %> </h3>
  <p> <%= h(@post.content).gsub(/\n/, '<br/>').html_safe %> </p>
</div>

<div class=" col-sm-9 col-sm-offset-3 col-md-6 col-md-offset-3 post_show">
  <p> Add your comment </p>
  <%= form_for([@post,@new_comment], url: post_comments_path(@post)) do |f| %>
    <%= f.text_area :content, class: "form-control"%> <br> 
    <%= f.submit "Post", class: "btn btn-md btn-warning" %> 
  <% end %> 
    <% @post.comments.each do |comment| %> 
      <div style="margin-top: 30px;"> <%= comment.content %> </div>
    <% end %> 
  </div>
</div>
