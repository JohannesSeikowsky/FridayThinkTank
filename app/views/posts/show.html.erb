<% provide(:title, "Thought of the week - Post") %> 

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 post_show">
    <h3> <%= @post.title %> </h3>
    <p> <%= @post.content %> </p>
  </div>
</div> 

<br>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 post_show">
    <p> Add your comment </p>
    <%= form_for([@post,@new_comment], url: post_comments_path(@post)) do |f| %>
      <%= f.text_area :content, class: "form-control"%> <br> 
      <%= f.submit "Post", class: "btn btn-md btn-warning" %> 
    <% end %> 
  </div>
</div> 

<br>

  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 post_show">
      <% if @post.comments.any? %>
        <p> Comments on this post: </p>
        <br>
        <% @post.comments.each do |comment| %> 
          <p> <%= comment.content %> </p>
          <br>
        <% end %> 
      <% else %> 
       <p> No comments have been added so far. </p>
      <% end %> 
    </div>
  </div>
